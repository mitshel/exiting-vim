{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Переопределенное ядро бутсрапа-->
    <link href="{{ asset('css/styles.css') }}" rel="stylesheet">
    <!-- Переопределенные шрифты бутстрапа-->
    <link rel="stylesheet" href="{{ asset('css/heading.css') }}">
    <link rel="stylesheet" href="{{ asset('css/body.css') }}">
    <style>
        #dropdownAcc {
            background: none;
            color: #4e5f68;
            text-align: left;
            font-weight: 700;
        }
        #dropdownAcc:active, #dropdownAcc:focus {
            border: none;
            background: none;
            outline: none;
            color: #135d82;
            background: #fff;
            border-radius: 0px !important;
        }

    </style>
{% endblock %}
{% block title %}{{ post.name }}{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg bg-secondary fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="{{ path('home') }}">
            <img alt="Brand" src="{{ asset('img/logo.png') }}" height="45px"> Quick Dive</a>
            <button class="navbar-toggler navbar-toggler-right font-weight-bold bg-primary text-white rounded"
                    type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">Меню <i
                        class="fas fa-bars"></i></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger"
                                                         href="#im">ОБЯЗАННОСТИ</a>

                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger"
                                                         href="#law">ПРАВА</a>

                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger"
                                                         href="#liability">ОТВЕТСТВЕННОСТЬ</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger"
                                                         href="{{ path('archive_index')}}">{% apply upper %}База полных инструкций{% endapply %}</a>
                    </li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item mx-0 mx-lg-1 dropdown">
                            <button class="w-100 nav-link py-3 px-0 px-lg-3 rounded border-0" id="dropdownAcc" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"></i><span class="ml-3 d-xl-none">АККАУНТ</span></button>
                            <div class="dropdown-menu" aria-labelledby="dropdownAcc">
                                <a class="dropdown-item" href="{{ path('home') }}">Моя инструкция</a>
                                <a class="dropdown-item" href="{{ path('logout') }}">Выйти</a>
                            </div>
                        </li>
                    {% else %}
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="{{ path('login') }}" ><i class="fa fa-user"></i><span class="ml-3 d-xl-none">ВОЙТИ</span></a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <header class="masthead bg-primary text-white text-center background" style="background-image: url({{ asset('img/rosback9.jpg') }})">
        <div class="container d-flex align-items-center flex-column backtext">
            <h1 class="masthead-heading mb-0">{{ post.name }}</h1>
            <p class="pre-wrap masthead-subheading font-weight-light mb-0">Полный текст должностной инструкции</p>
            <!-- Icon Divider-->
            {#<div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
            </div>#}
            <!-- Masthead Subheading-->
{#            <p class="pre-wrap masthead-subheading font-weight-light mb-0">Отдел разработки и внедрения информационных систем</p>#}
        </div>
    </header>

    <section class="page-section" id="im">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Portfolio Items-->
                <div class="col-md-12 col-lg-12 mb-12 professional-description">
                    <h2 class="text-secondary mb-0  text-center">Должностные обязанности<hr></h2>
                    {% for t in obyaz %}
                        <p>{{ t }}</p>
                    {% endfor %}
                </div>
                {#<div class="col-md-4 col-lg-4 mb-4 d-flex align-items-center">
                    <div><img src="{{ asset('img/professional.jpg') }}" class="work-process"></div>
                </div>#}
            </div>
        </div>
    </section>

    <section class="page-section" id="law">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-md-12 col-lg-12 mb-12 professional-description">
                    <h2 class="text-secondary mb-0 text-center">Права<hr></h2>
                    {% for t in prava %}
                        <p>{{ t }}</p>
                    {% endfor %}
                </div>
                {#<div class="col-md-4 col-lg-4 mb-4 d-flex align-items-center">
                    <img src="{{ asset('img/prava.jpg') }}" class="work-process">
                </div>#}
            </div>
        </div>
    </section>

    <section class="page-section" id="liability">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-12 mb-12 professional-description">
                    <h2 class="text-secondary mb-0 text-center">Ответственность<hr></h2>
                    {% for t in otvet %}
                        <p>{{ t }}</p>
                    {% endfor %}
                </div>
                {#<div class="col-md-4 col-lg-4 mb-4 d-flex align-items-center">
                    <img src="{{ asset('img/law.jpg') }}" class="work-process">
                </div>#}
            </div>
        </div>
    </section>

    <footer class="footer text-center">
        <div class="container">
            <div class="row">
                <!-- Footer Location-->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="mb-4">РАЗРАБОТКА</h4>
                    <p class="pre-wrap lead mb-0">2020 Exiting VIM г. Красноярск</p>

                </div>
                <!-- Footer Social Icons-->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="mb-4"><a style="color: #fff; text-decoration: none" href="{{ path('archive_index') }}">БАЗА ПОЛНЫХ ИНСТРУКЦИЙ</a></h4>
                </div>
                <!-- Footer About Text-->
                <div class="col-lg-4">
                    <h4 class="mb-4">О ПРОДУКТЕ</h4>
                    <p class="pre-wrap lead mb-0">Интеллектуальная система для автоматической генерации одностраничных инструкций</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}
{% block subjavascripts %}
    {{ parent() }}
    <script src="{{ asset('lib/fontawesome-free-5.5.0-web/js/all.min.js') }}"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>
{% endblock %}
